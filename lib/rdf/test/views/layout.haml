!!! 5
%html{lang: "en", "ng-app" => locals[:angular_app]}
  %head
    %base{href: url("/")}
    %meta{charset: "utf-8"}
    %meta{"http-equiv" => "Content-Type", content: "text/html;charset=utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= settings.app_name
    %link{rel: :stylesheet, href: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"}
    %link{rel: :stylesheet, href: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css"}
    != css :app
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
    %script{src: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
    %script{src: "//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore.js"}
    %script{src: "//ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular#{'.min' if settings.production?}.js"}
    %script{src: "//ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-route#{'.min' if settings.production?}.js"}
    %script{src: "//ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-resource#{'.min' if settings.production?}.js"}
    %script{id: "processors", type: "application/json"}
      != processors
    != js :app
  %body(role="document")
    %div.container-fluid
      %header.navbar.navbar-inverse.navbar-fixed-top{role: :navigation}
        %div.navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".nav-collapse")
            %span.sr-only
              Toggle Navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: url("/tests")}= settings.app_name
        %nav.navbar-collapse.collapse#main-nav
          %ul.nav.navbar-nav.navbar
            %li
              %a{href: url("/about")}="About"
            %li
              %a{href: url("/developers")}="Developers"
            %li
              %a{href: url("/../distiller")}="Distiller"
          %ul.nav.navbar-nav.navbar-right
            %li
              %form.navbar-form{method: 'GET', action: url("/tests")}
                %div.input-group
                  %input.input-small{type: 'text', placeholder: 'Manifest URL', name: 'manifestUrl'}
                  %div.input-group-btn
                    %button.btn.btn-primary.btn-xs{type: 'submit'}
                      Load
            %li
              %span.vers
                = RDF::Test::VERSION.to_s
    %div.container-fluid#main(role="main")
      = yield
    %footer
      %p
        = "The #{settings.app_name} is released under the"
        %a{href: "http://www.w3.org/Consortium/Legal/2008/04-testsuite-license"}
          W3C Test Suite License
      %p
        = "Copyright Â© 2014 World Wide Web Consortium,"
        (Massachusetts Institute of Technology, European Research Consortium
        for Informatics and Mathematics, Keio University) and others. All
        Rights Reserved.
        %a{href: "http://www.w3.org/Consortium/Legal/2008/04-testsuite-license"}
          http://www.w3.org/Consortium/Legal/2008/04-testsuite-copyright.html
